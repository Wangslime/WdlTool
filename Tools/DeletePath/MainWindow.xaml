<Window x:Class="DeletePath.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeletePath"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal" Width="400">
                <TextBlock Text="输入路径" FontSize="20"/>
                <TextBox x:Name="TextBoxFilePath" Width="200" Height="30" IsEnabled="True"/>
                <Button x:Name="BtnBrowse" Width="35" Height="30" Content="..." VerticalContentAlignment="Top" Click="BtnBrowse_Click"/>
                <Button x:Name="BtnDelete" Width="80" Height="30" Content="删除" Click="BtnDelete_Click"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal">
                <CheckBox x:Name="CheckBoxBIN">
                    <TextBlock Text="bin"/>
                </CheckBox>
                <CheckBox x:Name="CheckBoxOBJ">
                    <TextBlock Text="obj"/>
                </CheckBox>
                <CheckBox x:Name="CheckBox_PDB">
                    <TextBlock Text=".pdb"/>
                </CheckBox>
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</Window>
